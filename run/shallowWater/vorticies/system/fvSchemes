FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default         none;
    curl((streamFunction*(0,0,1))) Gauss linear;
    linearUpwind Gauss linear;
}

divSchemes
{
    default         none;
    div(flux,U)     Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         none;
    laplacian(streamFunction) Gauss linear uncorrected;
    laplacian((1|A(U)),p) Gauss linear uncorrected;
}

interpolationSchemes
{
    default            none;
    hup                linear; //upwind volFlux;
    hc                 linear;
    interpolate(convection(flux,U)) linear;
}

snGradSchemes
{
    default         uncorrected;
    snGrad(h)       uncorrected;
    snGrad(p)       uncorrected;
}

fluxRequired
{
    default         no;
    h;
}


