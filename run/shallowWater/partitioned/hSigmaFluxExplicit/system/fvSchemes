FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default         none;
    curl((streamFunction*(0,0,1))) Gauss linear;
    linearUpwind Gauss linear;
    
    grad(magSqr(stable.U))    Gauss linear;
    grad(magSqr(buoyant.U))   Gauss linear;
}

divSchemes
{
    default         Gauss upwind;
    //default         Gauss vanLeer;
}

laplacianSchemes
{
    default         none;
    laplacian(streamFunction) Gauss linear uncorrected;
    laplacian(h)              Gauss linear uncorrected;
    laplacian((((deltaT*g)*hf)*sumSigmaf),h) Gauss linear uncorrected;
    laplacian((1|A(U)),p) Gauss linear uncorrected;
}

interpolationSchemes
{
    default            none;
    interpolate(U)     linear;
    interpolate(h)     linear;
    stable.hup         upwind stable.volFlux;
    buoyant.hup        upwind buoyant.volFlux;
    stable.hc          linear;
    buoyant.hc         linear;
    flux((twoOmega^U)) linear;
    flux(convection(phi,U)) linear;
    interpolate((stable.hSigma*stable.U)) linear;
    interpolate((buoyant.hSigma*buoyant.U)) linear;
    interpolate(stable.hSigma) linear;
    interpolate(buoyant.hSigma) linear;
    interpolate(convection(stable.flux,stable.U)) linear;
    interpolate(convection(buoyant.flux,buoyant.U)) linear;
    
    interpolate(stable.U)       linear;
    interpolate(buoyant.U)       linear;
}

snGradSchemes
{
    default         uncorrected;
    snGrad(h)       uncorrected;
    snGrad(p)       uncorrected;
}

fluxRequired
{
    default         no;
    h;
}


// ************************************************************************* //
