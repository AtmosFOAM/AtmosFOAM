FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}
offCentre 1;

gradSchemes
{
    default         none;
    curl((streamFunction*(0,0,1))) Gauss linear;
}

divSchemes
{
    default         Gauss linear;/*
    div(phi,U)      Gauss upwind;
    div(stable.flux,(stable.sigma*stable.u)) Gauss upwind;
    div(buoyant.flux,(buoyant.sigma*buoyant.u)) Gauss upwind;
    div(stable.flux,stable.sigma) Gauss upwind;
    div(buoyant.flux,buoyant.sigma) Gauss upwind;*/
}

laplacianSchemes
{
    default         none;
    laplacian(streamFunction) Gauss linear uncorrected;
    laplacian(h)              Gauss linear uncorrected;
    laplacian(((deltaT*g)*hf),h)  Gauss linear uncorrected;
    laplacian((1|A(U)),p) Gauss linear uncorrected;
}

interpolationSchemes
{
    default            linear;
    interpolate(U)     linear;
    interpolate(h)     linear;
    flux((twoOmega^U)) linear;
    flux(convection(phi,U)) linear;
    interpolate(stable.sigma) linear;
    interpolate(buoyant.sigma) linear;
    interpolate(convection(stable.flux,(stable.sigma*stable.u))) linear;
    interpolate(convection(buoyant.flux,(buoyant.sigma*buoyant.u))) linear;
    interpolate(stable.u) linear;
    interpolate(buoyant.u) linear;
}

snGradSchemes
{
    default         none;
    snGrad(h)       uncorrected;
    snGrad(p)       uncorrected;
}

fluxRequired
{
    default         no;
    h;
}


