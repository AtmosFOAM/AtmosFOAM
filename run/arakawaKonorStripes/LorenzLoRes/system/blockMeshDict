FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1000; // effective units are km

vertices (
    (-400 0 0)  // 0
    ( 400  0 0)  // 1
    ( 400  1 0)  // 2
    (-400 1 0)  // 3
    (-400 0 30) // 4
    ( 400  0 30) // 5
    ( 400  1 30) // 6
    (-400 1 30) // 7
);

blocks (
	hex (0 1 2 3 4 5 6 7)
	    (160 1 30)
	    simpleGrading (1 1 1)
);

boundary (
	left {
		type cyclic;
        neighbourPatch right;
		faces (
			(0 3 7 4)
		);
	}

	right {
		type cyclic;
        neighbourPatch left;
		faces (
			(1 2 6 5)
		);
	}

	ground {
		type wall;
		faces (
			(0 1 2 3)
		);	
	}

	top {
		type wall;
		faces (
			(4 5 6 7)
		);
	}

	frontAndBack {
		type empty;
		faces (
			(0 1 5 4)
			(3 2 6 7)
		);
	}
);
