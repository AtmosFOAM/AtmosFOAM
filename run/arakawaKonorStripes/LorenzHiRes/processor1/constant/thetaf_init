FoamFile
{
    version     2.0;
    format      ascii;
    class       surfaceScalarField;
    location    "constant";
    object      thetaf_init;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 250;

boundaryField
{
    left
    {
        type            fixedValue;
        value           nonuniform 0();
    }
    right
    {
        type            fixedValue;
        value           uniform 288;
    }
    ground
    {
        type            fixedValue;
        value           uniform 250;
    }
    top
    {
        type            fixedValue;
        value           uniform 288;
    }
    frontAndBack
    {
        type            empty;
        value           nonuniform 0();
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform -250;
    }
}


