FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}
offCentre 0.5;
SIgravityWaves false;

gradSchemes
{
    default         none;
    linearUpwind    leastSquares;
    //grad(stable.theta)     Gauss linear;
    //grad(buoyant.theta)     Gauss linear;
}

divSchemes
{
    default none;
    div(stable.flux,(stable.waterVapourRho|rho))   Gauss linearUpwind linearUpwind;
    div(stable.flux,(stable.waterLiquidFrac|rho))   Gauss linearUpwind linearUpwind;
    div(buoyant.flux,(buoyant.waterVapourRho|rho)) Gauss linearUpwind linearUpwind;
    div(buoyant.flux,(buoyant.waterLiquidFrac|rho)) Gauss linearUpwind linearUpwind;
    //div(U,stable.theta)   Gauss linearUpwind linearUpwind;
    //div(U,u)   Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         Gauss midPoint uncorrected;
}

interpolationSchemes
{
    default        midPoint;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


