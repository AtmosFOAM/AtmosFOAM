FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    location    "constant";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    top
    {
        type            zeroGradient;
        //type            extrapolatedCalculated;
        //value           uniform (0 0 0);
    }
    inlet
    {
        type            zeroGradient;
//        type            extrapolatedCalculated;
//        value           uniform (0 0 0);
    }
    outlet
    {
        type            zeroGradient;
//        type            extrapolatedCalculated;
//        value           uniform (0 0 0);
    }
    ground
    {
        type            zeroGradient;
//        type            extrapolatedCalculated;
//        value           uniform (0 0 0);
    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
}


