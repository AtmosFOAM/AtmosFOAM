FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

offCentre 0.5;

SIgravityWaves true;

gradSchemes
{
    default         none;
    grad(theta)     Gauss midPoint;
    grad((volIntegrate((bf*magSf))&(g|mag(g)))) Gauss midPoint;
    linearUpwind    Gauss linear;
}

divSchemes
{
    default         none;
//    div(U,theta)    Gauss cubicUpwindCPCFit Cartesian;
//    div(U,u)        Gauss cubicUpwindCPCFit Cartesian;
    div(U,theta)    Gauss APVM Uf;
    div(U,u)        Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        none; 
    interpolate(theta)    APVM Uf; //linearUpwind phi linearUpwind;
    interpolate(volIntegrate((snGrad(theta)*magSf))) linear;
    interpolate(volIntegrate((snGrad((((rho_0*theta_0)-((0.5*deltaT)*divUtheta_0))|(rho_0-((0.5*deltaT)*divU_0))))*magSf))) linear;
    interpolate(rho)    midPoint;
    interpolate(convection(U,u)) midPoint;
    interpolate(u) midPoint;
    interpolate(grad(theta)) midPoint;
    interpolate(grad((volIntegrate((bf*magSf))&(g|mag(g))))) midPoint;
    interpolate((volIntegrate((bf*magSf))_0&(g|mag(g)))) midPoint;
    H                        midPoint;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
    snGrad(theta)   uncorrected;
    snGrad((volIntegrate((bf*magSf))&(g|mag(g)))) uncorrected;
    snGrad((((rho_0*theta_0)-((0.5*deltaT)*divUtheta_0))|(rho_0-((0.5*deltaT)*divU_0)))) uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


