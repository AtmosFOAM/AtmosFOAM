FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}
offCentre 0.5;

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default none;
    div(stable.flux,stable.theta)   Gauss linearUpwind linearUpwind;
    div(buoyant.flux,buoyant.theta) Gauss linearUpwind linearUpwind;
    div(stable.flux,stable.u)       Gauss linearUpwind linearUpwind;
    div(buoyant.flux,buoyant.u)     Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         Gauss midPoint uncorrected;
}

interpolationSchemes
{
    default        midPoint;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


